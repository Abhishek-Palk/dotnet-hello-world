pipeline {
    agent any

    parameters {
        choice(name: 'ENV', choices: ['UAT','PROD'], description: 'Select environment')
    }

    environment {
        AWS_CREDS = credentials('aws-creds')
        DOCKER_CREDS = credentials('dockerhub-creds')
        IMAGE_NAME = "abhishekpalkar86/dotnet-hello-world"
        TAG = "${env.BUILD_NUMBER}"

        UAT_IP = "13.201.66.24"
        PROD_IP = "13.232.38.229"
        SSH_KEY = credentials('ec2-ssh-private-key')
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/Abhishek-Palk/dotnet-hello-world.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh """
                docker build -t ${IMAGE_NAME}:${TAG} .
                """
            }
        }

        stage('Push to DockerHub') {
            steps {
                sh """
                echo $DOCKER_CREDS_PSW | docker login -u $DOCKER_CREDS_USR --password-stdin
                docker push ${IMAGE_NAME}:${TAG}
                """
            }
        }

        stage('Deploy to EC2') {
            steps {
                script {
                    def TARGET_IP = (params.ENV == "UAT") ? UAT_IP : PROD_IP

                    // Write SSH key to file
                    writeFile file: 'key.pem', text: SSH_KEY_PSW
                    sh "chmod 600 key.pem"

                    sh """
                    ssh -o StrictHostKeyChecking=no -i key.pem ec2-user@${TARGET_IP} << EOF
                        docker pull ${IMAGE_NAME}:${TAG}
                        docker stop app || true
                        docker rm app || true
                        docker run -d --name app -p 5000:80 ${IMAGE_NAME}:${TAG}
                    EOF
                    """
                }
            }
        }

        stage('Health Check') {
            steps {
                script {
                    def TARGET_IP = (params.ENV == "UAT") ? UAT_IP : PROD_IP
                    sh "curl http://${TARGET_IP}:5000/health || true"
                }
            }
        }
    }
}
